<%= form_for [:admin, @admin_post_detail], html: {class: 'form-horizontal ng-pristine ng-valid'}, remote: true do |f| %>
    <% if @admin_post_detail.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@admin_post_detail.errors.count, "error") %> prohibited this admin_post from being saved:</h2>

        <ul>
        <% @admin_post_detail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-6">
        <%= f.label :url %><br>
        <%= f.text_field :url, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.label :price %><br>
        <%= f.text_field :price, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.label :listing_company %><br>
        <%= f.text_field :listing_company, class: 'form-control' %>
        <%= f.hidden_field :post_id, :value => params[:post_id] %>
      </div>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
